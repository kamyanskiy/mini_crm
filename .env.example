PROJECT_NAME=mini_crm

POSTGRES_USER=app
POSTGRES_PASSWORD=change_me
POSTGRES_DB=crm_database
POSTGRES_HOST=db
POSTGRES_PORT=5432

REDIS_HOST=redis
REDIS_PORT=6379


# gunicorn settings
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
WORKERS_PER_CORE=1


# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Initial Admin Setup (used by 'crm-admin init' command in entrypoint.sh)
# Set to true to automatically create admin user on first startup
CREATE_ADMIN_ON_STARTUP=true
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=SecurePass123
ADMIN_NAME=Administrator
ADMIN_ORGANIZATION=Organization

# CORS Settings (comma-separated values, use * for all)
CORS_ORIGINS=*
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_METHODS=*
CORS_HEADERS=*
# example
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
# CORS_METHODS=GET,POST,PUT,DELETE
# CORS_HEADERS=Content-Type,Authorization
